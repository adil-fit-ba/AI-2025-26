{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Simulator": {
    "Enabled": false,
    "IntervalMs": 3000,
    "BatchSize": 1
  },
  "SpamAgent": {
    "Database": {
      "Path": "data/spam_agent.db"
    },
    "Models": {
      "Directory": "models"
    },
    "Thresholds": {
      "Allow": 0.30,
      "Block": 0.70
    },
    "Training": {
      "DefaultTemplate": "Medium",
      "AutoRetrainEnabled": true,
      "RetrainGoldThreshold": 100
    }
  }
}
